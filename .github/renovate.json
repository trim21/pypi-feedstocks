{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>trim21/renovate-config",
    "local>trim21/renovate-config:app"
  ],
  "customManagers": [
    {
      "customType": "jsonata",
      "fileMatch": [
        "^recipe\\.yaml?$"
      ],
      "fileFormat": "yaml",
      "matchStrings": [
        "outputs.{'currentValue': context.version, 'packageName': context.name}"
      ],
      "datasourceTemplate": "pypi"
    }
  ]
}
